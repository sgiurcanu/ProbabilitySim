<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.probabilitysim.SpinnerController">
   <children>
      <PieChart fx:id="colorWheel" layoutX="86.0" layoutY="6.0" legendVisible="false" />
      <Button fx:id="spin" layoutX="14.0" layoutY="371.0" mnemonicParsing="false" onAction="#onClickHandler" text="spin" />
      <Button fx:id="removeSection" layoutX="14.0" layoutY="330.0" mnemonicParsing="false" onAction="#onClickHandler" text="remove" />
      <Button fx:id="addSection" layoutX="14.0" layoutY="288.0" mnemonicParsing="false" onAction="#onClickHandler" text="add" />
      <ComboBox fx:id="sectionList" layoutX="23.0" layoutY="50.0" prefWidth="150.0" />
      <Label fx:id="probability" layoutX="38.0" layoutY="26.0" text="Theoretical probability" />
      <Label fx:id="output" layoutX="262.0" layoutY="26.0" text="Label" />
      <Button fx:id="calculate" layoutX="173.0" layoutY="22.0" mnemonicParsing="false" onAction="#probCalc" text="Calculate" />
      <Slider fx:id="slider" blockIncrement="1.0" layoutX="446.0" layoutY="24.0" majorTickUnit="3.0" max="15.0" min="1.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
   </children>
</AnchorPane>
